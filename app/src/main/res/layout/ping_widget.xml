<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_padding"
    android:id="@+id/widget_view">

    <ImageView
        android:id="@+id/widget_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:src="@drawable/appwidget_bg" />

    <TextView
        android:id="@+id/widget_responce_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/widget_background"
        android:layout_above="@id/widget_icon"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/widget_text_margin"
        android:textSize="12sp"
        android:textColor="@color/colorBlack"
        android:ellipsize="end"
        android:text="22.22 ms"/>

    <ImageView
        android:id="@+id/widget_icon"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/rect_ok" />

    <TextView
        android:id="@+id/widget_short_host_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/short_host_name_text_size" />
</RelativeLayout>