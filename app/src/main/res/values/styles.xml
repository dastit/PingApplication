<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textPrimaryColor</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:fontFamily">@font/offside_font_family</item>

    </style>

    <style name="AppThemeNoBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textPrimaryColor</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:fontFamily">@font/offside_font_family</item>
    </style>

    <style name="ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/textPrimaryColor</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textPrimaryColor</item>
        <item name="android:fontFamily">@font/offside_font_family</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="AutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/textPrimaryColor</item>
        <item name="android:fontFamily">@font/offside_font_family</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>

    <style name="Base.Widget.AppCompat.DropDownItem.Spinner.removable" parent="Base.Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/textPrimaryColor</item>
        <item name="android:background">@color/colorLightGrey</item>

    </style>
</resources>
